<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- MARK: Camera & OCR Permissions -->

	<!-- Camera Usage - Required for VisionKit DataScannerViewController -->
	<key>NSCameraUsageDescription</key>
	<string>Deets needs camera access to scan business cards and extract contact information using text recognition.</string>

	<!-- Photo Library Usage - Optional, for saved images -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Deets can scan business cards from your photo library to extract contact information.</string>

	<!-- Photo Library Add Usage - For saving scanned cards -->
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>Deets can save scanned business card images to your photo library for future reference.</string>

	<!-- MARK: App Configuration -->

	<!-- Supported Interface Orientations (iPhone) -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- Supported Interface Orientations (iPad) -->
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- MARK: VisionKit Requirements -->

	<!-- Minimum iOS Version -->
	<key>MinimumOSVersion</key>
	<string>16.0</string>

	<!-- Required Device Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
		<string>camera</string>
	</array>

	<!-- Background Modes (if needed for processing) -->
	<key>UIBackgroundModes</key>
	<array>
		<string>processing</string>
	</array>

	<!-- MARK: Privacy & Security -->

	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<!-- Allow loading images from HTTP sources if needed -->
		<key>NSAllowsArbitraryLoadsInWebContent</key>
		<false/>
	</dict>

	<!-- MARK: App Appearance -->

	<!-- Launch Screen Configuration -->
	<key>UILaunchScreen</key>
	<dict>
		<key>UIImageName</key>
		<string>LaunchImage</string>
	</dict>

	<!-- Status Bar Style -->
	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleDefault</string>

	<!-- View Controller-based Status Bar Appearance -->
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>

	<!-- MARK: Scene Configuration (SwiftUI) -->

	<!-- Application Scene Manifest -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<true/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array>
				<dict>
					<key>UISceneConfigurationName</key>
					<string>Default Configuration</string>
					<key>UISceneDelegateClassName</key>
					<string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
				</dict>
			</array>
		</dict>
	</dict>
</dict>
</plist>
